<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="808dp"
        android:layout_marginRight="808dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aiologo" />

    <Button
        android:id="@+id/btn_cahsier"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/button_dark_blue"
        android:text="@string/cashier"
        android:textAllCaps="false"
        android:textColor="#C4C4C4"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/button_dark_grey"
        android:text="@string/profile"
        android:textAllCaps="false"
        android:textColor="#C4C4C4"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/btn_cahsier"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_editMenuItem"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_dark_yellow"
        android:text="@string/edit_menu_item"
        android:textAllCaps="false"
        android:textColor="#C4C4C4"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/btn_addMenuItem"
        app:layout_constraintTop_toBottomOf="@+id/btn_cahsier" />

    <Button
        android:id="@+id/btn_addMenuItem"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_dark_green"
        android:text="@string/add_menu_item"
        android:textAllCaps="false"
        android:textColor="#C4C4C4"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cahsier" />

    <Button
        android:id="@+id/btn_deleteMenuItem"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_dark_red"
        android:text="@string/delete_menu_item"
        android:textAllCaps="false"
        android:textColor="#C4C4C4"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/btn_editMenuItem"
        app:layout_constraintTop_toBottomOf="@+id/btn_cahsier" />

    <Button
        android:id="@+id/btn_sales"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/button_dark_blue"
        android:text="@string/sales"
        android:textAllCaps="false"
        android:textColor="#C4C4C4"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/btn_profile"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout" />

</androidx.constraintlayout.widget.ConstraintLayout>